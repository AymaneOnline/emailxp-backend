#############################
# EmailXP Backend .env.example
# (All secrets are placeholders)
#############################

# Core Application
APP_NAME=EmailXP
NODE_ENV=development
PORT=5000

# MongoDB
MONGO_URI=mongodb+srv://USER:PASSWORD@cluster.mongodb.net/emailxp_db

# JWT / Auth
JWT_SECRET=replace_with_long_random_string

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Email Provider (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=no-reply@example.com

# Alternative Providers (optional)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.example.com
MAILGUN_URL=https://api.mailgun.net
MAILGUN_WEBHOOK_SIGNING_KEY=your_mailgun_webhook_signing_key
SENDGRID_API_KEY=your_sendgrid_api_key

# Redis (Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS_ENABLED=false
QUEUE_PREFIX=emailxp_dev

# Optional Redis / Queue tuning
# REDIS_RETRY_BASE_DELAY_MS=200
# REDIS_RETRY_MAX_DELAY_MS=5000
# QUEUE_RATE_MAX=100
# QUEUE_RATE_DURATION_MS=60000
# QUEUE_BACKOFF_BASE_MS=2000
# QUEUE_BACKOFF_MAX_MS=60000

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=111111111111111
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Unlayer (Template Editor)
UNLAYER_API_KEY=your_unlayer_key
UNLAYER_PROJECT_ID=000000

# Feature Flags & Safety
ALLOW_UNVERIFIED_SENDING=false
DOUBLE_OPT_IN_TOKEN_TTL_HOURS=48
# INDEX_AUDIT=1

# Notes:
# - Rotate secrets regularly.
# - Do NOT commit real values.